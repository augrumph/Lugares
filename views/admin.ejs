                            </div>
                        </div>
                        <!-- Column -->
                    </div>
                    <div class="container-fluid">
                        <!-- ============================================================== -->
                        <!-- Start Page Content -->
                        <!-- ============================================================== -->
                        <form action="/show" method="get">
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="white-box">
                                        <h3 class="box-title">
                                            Lugares Cadastrados
                                            <form method="get" action="/show">
                                                <div class="form-group mb-4">
                                                    <div class="col-md-12 border-bottom p-0">
                                                        <button type="submit" class="btn btn-success">Pesquisar Lugares</button>
                                                </div>
                                            </form>
                                        </Canvas>
                                    </h3>
                                    <div class="table-responsive">
                                        <table border="1" class="table text-nowrap">
                                            <thead>
                                                <tr>
                                                    <th class="border-top-0">ID</th>
                                                    <th class="border-top-0">Nome do Lugar</th>
                                                    <th class="border-top-0">Tipo de Comida</th>
                                                    <th class="border-top-0">Média de Preço</th>
                                                    <th class="border-top-0">Imagem</th>
                                                    <th class="border-top-0">Deletar</th>
                                                    
                                                </tr>
                                            </thead>
                                                    
                                            <%
                                            if(userData.length!=0){
                                            var i=1;
                                            userData.forEach(function(data){
                                            %>         
        
                                            
                                            <tbody>
                                                <td><%=data.id %></td>
                                                <td><%=data.nome %></td>
                                                <td><%=data.tipo %></td>
                                                <td><%=data.media %></td>
                                                <td><%=data.imagem %></td>
                                                <td>
                                                    <a class="btn btn-danger" href="../remove/<%=data.id%>"
                                                    >Delete</a
                                                    >
                                                </td>
                                                
                                            </tbody>
                                            <%  i++; }) %>
                                            <% } else{ %>
                                                
                                            <% } %>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
