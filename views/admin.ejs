                <div class="container-fluid">
                    <!-- ============================================================== -->
                    <!-- Start Page Content -->
                    <!-- ============================================================== -->
                    <!-- Row -->
                    <div class="row">
                        <!-- Column -->
                        <!-- Column -->
                        <!-- Column -->
                        <div class="col-lg-8 col-xlg-9 col-md-12">
                            <div class="card">
                                <div class="card-body">
                                    <form class="form-horizontal form-material" method="post" action="/save">
                                        <div class="form-group mb-4">
                                            <div class="col-md-12 border-bottom p-0">
                                                <input
                                                    type="text"
                                                    name="nome"
                                                    id="nome"
                                                    placeholder="Nome do Lugar"
                                                    required
                                                    class="form-control p-0 border-0"
                                                >
                                            </div>
                                        </div>
                                        <div class="form-group mb-4">
                                            <div class="col-md-12 border-bottom p-0">
                                                <input
                                                    name="tipo"
                                                    id="tipo"
                                                    type="text"
                                                    placeholder="Tipo de Comida"
                                                    class="form-control p-0 border-0"
                                                    required
                                                >
                                            </div>
                                        </div>
                                        <div class="form-group mb-4">
                                            <div class="col-md-12 border-bottom p-0">
                                                <input
                                                    id="media"
                                                    name="media"
                                                    placeholder="Média Preço"
                                                    type="text"
                                                    class="form-control p-0 border-0"
                                                    required
                                                >
                                            </div>
                                        </div>
                                        <div class="form-group mb-4">
                                            <div class="col-md-12 border-bottom p-0">
                                                <input
                                                    type="file"
                                                    placeholder="Imagem"
                                                    id="imagem"
                                                    name="imagem"
                                                    required
                                                >
                                            </div>
                                        </div>
                                        <div class="form-group mb-4">
                                            <div class="col-md-12 border-bottom p-0">
                                                <button class="btn btn-success">Mais um lugar</button>
                                            </div>
                                        </div>
                                    </form>
